@model EntityLayer.Concrete.Message2
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}


<div class="page-header">
    <h3 class="page-title"> Mesaj Detayı </h3>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Yazar</a></li>
            <li class="breadcrumb-item"><a href="#">Yazılarım</a></li>
            <li class="breadcrumb-item active" aria-current="page">Blog Düzenle</li>
        </ol>
    </nav>
</div>
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description"> </p>
                <div class="form-group">
                    @Html.Label("Mesaj Başlığı")
                    @Model.Subject
                </div>
                <div class="form-group">
                    @Html.Label("Tarih")
                    @(((DateTime)Model.MessageDate).ToString("dd MMM yyyy"))
                </div>
                <div class="form-group">
                    @*@Html.Label("Gönderen")
                    @Model.SenderUser.WriterName*@
                </div>
                <div class="form-group">
                    @Html.Label("Mesaj İçeriği")
                    @Model.MessageDetails
                </div>
                @Html.HiddenFor(x => x.MessageID)
                <button type="submit" class="btn btn-gradient-primary mr-2">Mesajlara Dön</button>
            </div>
        </div>
    </div>
</div>



