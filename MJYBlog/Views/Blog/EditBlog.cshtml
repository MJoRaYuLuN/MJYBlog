@model EntityLayer.Concrete.Blog
@{
    ViewData["Title"] = "EditBlog";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}


<div class="page-header">
    <h3 class="page-title"> Yeni Yazı Oluştur </h3>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Yazar</a></li>
            <li class="breadcrumb-item"><a href="#">Yazılarım</a></li>
            <li class="breadcrumb-item active" aria-current="page">Blog Düzenle</li>
        </ol>
    </nav>
</div>
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description"> Yazınızı düzenlemek için aşağıdaki alanları kullanabilirsiniz</p>
                @using (Html.BeginForm("editblog", "Blog", FormMethod.Post))
                {
                    <div class="form-group">
                        @Html.Label("Blog Başlığı")
                        @Html.TextBoxFor(x => x.BlogTitle, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.BlogTitle, "", new { @class = "text-danger small" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Kategori")
                        @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.cv, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Blog Görseli")
                        @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.BlogImage, "", new { @class = "text-danger small" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Blog Küçük Görsel")
                        @Html.TextBoxFor(x => x.BlogThumbnailImage, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Blog İçeriği")
                        @Html.TextAreaFor(x => x.BlogContent, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.BlogContent, "", new { @class = "text-danger small" })
                    </div>
                    @Html.HiddenFor(x=>x.BlogID)
                    <button type="submit" class="btn btn-gradient-primary mr-2">Güncelle</button>
                }
            </div>
        </div>
    </div>
</div>

