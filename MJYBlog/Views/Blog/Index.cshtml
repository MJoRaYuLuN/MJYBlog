@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Blog Posts</h3>
        <div class="inner-sec">
            <!--left-->
            <div class="left-blog-info-w3layouts-agileits text-left">
                <div class="row">
                    @foreach (var yazi in Model.Take(5))
                    {

                        <div class="col-lg-4 card">
                            <a href="~/blog/BlogReadAll/@yazi.BlogID">
                                <img src="~/images/@yazi.BlogThumbnailImage" class="card-img-top img-fluid" alt="@yazi.BlogTitle">
                            </a>
                            <div class="card-body">
                                <ul class="blog-icons my-4">
                                    <li>
                                        <a href="#">
                                            <i class="far fa-calendar-alt"></i> @(((DateTime)yazi.BlogCreateDate).ToString("dd MMM yyyy"))
                                        </a>
                                    </li>
                                    <li class="mx-2">
                                        <a href="#">
                                            <i class="far fa-comment"></i> 21
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="fas fa-eye"></i> @yazi.Category.CategoryName
                                        </a>
                                    </li>

                                </ul>
                                <h5 class="card-title">
                                    <a href="~/blog/BlogReadAll/@yazi.BlogID">@yazi.BlogTitle</a>
                                </h5>
                                <p class="card-text mb-3">@yazi.BlogContent.Substring(0, yazi.BlogContent.Substring(0,130).LastIndexOf(" "))...</p>
                                <a href="~/Blog/BlogReadAll/@yazi.BlogID" class="btn btn-primary read-m">Devamını Oku</a>
                            </div>
                        </div>

                    }
                </div>
                <!--//left-->
            </div>
        </div>
    </div>
</section>
